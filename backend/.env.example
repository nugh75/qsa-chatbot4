# Provider API Keys (opzionali - configurare solo per i provider che si vogliono utilizzare)

# Google Gemini
GOOGLE_API_KEY=your_google_api_key_here

# Anthropic Claude  
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI (usato sia per AI che per Voice TTS)
OPENAI_API_KEY=your_openai_api_key_here

# OpenRouter
OPENROUTER_API_KEY=your_openrouter_api_key_here

# ElevenLabs TTS
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Ollama base URL (opzionale, default: http://localhost:11434)
OLLAMA_BASE_URL=http://localhost:11434

# Admin configuration
ADMIN_EMAILS=admin@qsa-chatbot.com,desi76@example.com,daniele.dragoni@gmail.com
ADMIN_ROLES=admin

# --- Default seeds (system/personalities/summary) ---
# If set, these control the initial defaults at first start and can be edited later via Admin UI.
# System prompt seed (id and text). If ID exists it will be upserted, and set_active controls activation.
DEFAULT_SYSTEM_PROMPT_ID=counselorbot
DEFAULT_SYSTEM_PROMPT_NAME=Counselorbot (QSA)
# Keep text empty here; the app ships with a solid default. You can override by filling this.
DEFAULT_SYSTEM_PROMPT_TEXT=
DEFAULT_SYSTEM_PROMPT_SET_ACTIVE=false

# Default personality seed (stored in Postgres)
DEFAULT_PERSONALITY_ID=counselorbot
DEFAULT_PERSONALITY_NAME=Counselorbot
DEFAULT_PERSONALITY_PROVIDER=openrouter
DEFAULT_PERSONALITY_MODEL=gpt-oss-20b:free
# Optional references to welcome message and guide IDs (managed by welcome-guides module)
DEFAULT_PERSONALITY_WELCOME_ID=
DEFAULT_PERSONALITY_GUIDE_ID=
DEFAULT_PERSONALITY_SET_DEFAULT=false
DEFAULT_PERSONALITY_ACTIVE=true

# Summary prompt seed (multi-variant store); if provided, an entry with this id will be created and activated
DEFAULT_SUMMARY_PROMPT_ID=summary2
DEFAULT_SUMMARY_PROMPT_NAME=Summary (IT)
# Leave empty to use built-in default; set to override
DEFAULT_SUMMARY_PROMPT_TEXT=
DEFAULT_SUMMARY_PROMPT_SET_ACTIVE=true

# Subagent defaults (placeholder for future use)
DEFAULT_SUBAGENT_ENABLED=false
DEFAULT_SUBAGENT_CONFIG=

# --- Optional JSON seed import ---
# If set, on first start the backend will import defaults from this JSON file.
# Path is inside the container. With docker-compose volumes, you can mount a file under ./backend/config/seed.
# Example: SEED_CONTENT_JSON=/app/config/seed/default_content.json
SEED_CONTENT_JSON=
# If true, overwrite existing runtime files (system/summary/welcome-guide) with seed content.
# Defaults to false (merge-only: add missing items, keep existing and active selections).
SEED_CONTENT_OVERWRITE=false
