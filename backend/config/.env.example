# Provider API Keys (opzionali - configurare solo per i provider che si vogliono utilizzare)

# Google Gemini
GOOGLE_API_KEY=your_google_api_key_here

# Anthropic Claude  
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI (usato sia per AI che per Voice TTS)
OPENAI_API_KEY=your_openai_api_key_here

# OpenRouter
OPENROUTER_API_KEY=your_openrouter_api_key_here

# ElevenLabs TTS
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Ollama base URL (opzionale, default: http://localhost:11434)
OLLAMA_BASE_URL=http://localhost:11434

# JWT Secret per autenticazione (IMPORTANTE: cambiare in produzione!)
JWT_SECRET_KEY=dev_super_secret_change_me_in_production

# Admin default (creato all'avvio se non presente)
DEFAULT_ADMIN_EMAIL=ai4educ@gmail.com
DEFAULT_ADMIN_PASSWORD=admin123!
# Se 1, sovrascrive la password dell'admin se esiste già
DEFAULT_ADMIN_OVERWRITE=0

# Lista di email amministratore (separate da virgola)
ADMIN_EMAILS=admin@qsa-chatbot.com,desi76@example.com,daniele.dragoni@gmail.com
# Ruoli che garantiscono privilegi amministratore
ADMIN_ROLES=admin

# Database paths (gestiti automaticamente con Docker volumes)
# DATABASE_PATH=/app/storage/databases/qsa_chatbot.db
# RAG_DATABASE_PATH=/app/storage/databases/rag.db

# --- Configurazione PostgreSQL (opzionale: per migrare da SQLite) ---
# Se vuoi usare Postgres dentro docker-compose lascia i default sotto (coerenti con docker-compose.yml)
POSTGRES_DB=qsa_chatbot
POSTGRES_USER=qsa_user
POSTGRES_PASSWORD=qsa_pass
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
# Nota: la porta esposta sull'host ora è 5532 (mapping 5532:5432). All'interno dei container resta 5432.
# Per collegarti da host: psql -h localhost -p 5532 -U $POSTGRES_USER -d $POSTGRES_DB

# URL completo usato dall'app se definito; se vuoto il codice corrente userà ancora SQLite.
# Dopo il refactor dovrai far leggere questo valore e usare psycopg2.
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Paths per modelli (gestiti automaticamente con Docker volumes)
# WHISPER_MODELS_PATH=/app/models/whisper
# PIPER_MODELS_PATH=/app/models/piper

# --- Default seeds (system/personalities/summary) ---
# Valori letti all'avvio per creare/aggiornare i default modificabili via Admin UI.
# Prompt di sistema
DEFAULT_SYSTEM_PROMPT_ID=counselorbot
DEFAULT_SYSTEM_PROMPT_NAME=Counselorbot (QSA)
# Lascia vuoto per usare il testo integrato; compila per override
DEFAULT_SYSTEM_PROMPT_TEXT=
DEFAULT_SYSTEM_PROMPT_SET_ACTIVE=false

# Personalità (Postgres)
DEFAULT_PERSONALITY_ID=counselorbot
DEFAULT_PERSONALITY_NAME=Counselorbot
DEFAULT_PERSONALITY_PROVIDER=openrouter
DEFAULT_PERSONALITY_MODEL=gpt-oss-20b:free
DEFAULT_PERSONALITY_WELCOME_ID=
DEFAULT_PERSONALITY_GUIDE_ID=
DEFAULT_PERSONALITY_SET_DEFAULT=false
DEFAULT_PERSONALITY_ACTIVE=true

# Summary prompt multi-varianti
DEFAULT_SUMMARY_PROMPT_ID=summary2
DEFAULT_SUMMARY_PROMPT_NAME=Summary (IT)
DEFAULT_SUMMARY_PROMPT_TEXT=
DEFAULT_SUMMARY_PROMPT_SET_ACTIVE=true

# Subagent (placeholder)
DEFAULT_SUBAGENT_ENABLED=false
DEFAULT_SUBAGENT_CONFIG=

# --- Import contenuti da JSON (opzionale) ---
# Se impostato, all'avvio il backend importerà prompt di sistema, prompt di riassunto e welcome/guide
# da un file JSON. Il path deve essere visibile nel container. Con docker-compose puoi usare
# ./backend/config/seed come volume già montato in /app/config.
# Esempio:
# SEED_CONTENT_JSON=/app/config/seed/default_content.json
SEED_CONTENT_JSON=
# Se true, sovrascrive i file runtime con il contenuto del seed (ATTENZIONE). Default: false -> merge.
SEED_CONTENT_OVERWRITE=false
